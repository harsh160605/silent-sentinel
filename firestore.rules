rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAnonymous() {
      return request.auth != null && request.auth.token.firebase.sign_in_provider == 'anonymous';
    }
    
    // Safety Reports - Anonymous users can create, everyone can read
    match /reports/{reportId} {
      allow read: if true; // Public read for transparency
      allow create: if isAuthenticated() 
                    && request.resource.data.keys().hasAll(['timestamp', 'location', 'riskLevel', 'reason', 'reportType'])
                    && request.resource.data.timestamp is timestamp
                    && request.resource.data.riskLevel in ['low', 'medium', 'high']
                    && request.resource.data.reportType in ['perception', 'crime']
                    && request.resource.data.status == 'unverified';
      allow update: if false; // Reports are immutable once created
      allow delete: if false; // No deletion, use expiry instead
    }
    
    // Community Discussions - Location-scoped anonymous chat
    match /discussions/{locationHash}/messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
                    && request.resource.data.keys().hasAll(['timestamp', 'content', 'moderated'])
                    && request.resource.data.timestamp is timestamp
                    && request.resource.data.content.size() <= 500
                    && request.resource.data.moderated == true; // Must pass AI moderation
      allow update: if false;
      allow delete: if false;
    }
    
    // Pattern Clusters - Read-only for clients (written by Cloud Functions)
    match /patterns/{patternId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Authority Reports - Read-only for clients
    match /authority_reports/{reportId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // User Preferences (anonymous but persistent)
    match /user_preferences/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}

